{
  "name": "crm-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run tailwind:build && ng serve",
    "build": "npm run tailwind:build && ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "tailwind:build": "tailwindcss -i src/tailwind-source.css -o src/tailwind-output.css",
    "tailwind:watch": "tailwindcss -i src/tailwind-source.css -o src/tailwind-output.css --watch",
    "dev": "concurrently \"npm run tailwind:watch\" \"ng serve\""
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "rxjs": "~7.8.0",
    "sweetalert2": "^11.21.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.10",
    "@angular/cli": "^19.2.11",
    "@angular/compiler-cli": "^19.2.0",
    "@types/jasmine": "~5.1.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.3",
    "sass": "^1.87.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.7.2"
  }
}